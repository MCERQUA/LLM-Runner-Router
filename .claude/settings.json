{
  "commandsDir": ".claude/commands",
  "hooksDir": ".claude/hooks",
  "projectType": "llm-orchestration",
  "autoRunHooks": true,
  "preferredTools": {
    "test": "npm test",
    "lint": "npm run lint",
    "format": "npm run format",
    "build": "npm run build",
    "dev": "npm run dev"
  },
  "fileWatchers": {
    "src/**/*.js": ["lint", "test"],
    "package.json": ["install", "audit"],
    "docs/**/*.md": ["docs:validate"]
  },
  "environmentChecks": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keyFiles": [
    "src/index.js",
    "src/core/Router.js",
    "src/core/Registry.js",
    "src/core/Pipeline.js",
    "package.json",
    "CLAUDE.md"
  ],
  "testPatterns": {
    "unit": "tests/unit/**/*.test.js",
    "integration": "tests/integration/**/*.test.js",
    "e2e": "tests/e2e/**/*.test.js"
  },
  "buildArtifacts": {
    "output": "dist/",
    "ignore": ["node_modules/", "models/cache/", "logs/", "temp/"]
  },
  "securityRules": {
    "noSecrets": true,
    "validateModelSources": true,
    "sandboxExecution": true
  }
}