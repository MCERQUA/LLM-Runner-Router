#!/bin/bash
# Test model loading and basic inference

echo "üß™ Testing LLM Router Model Loading..."

# Change to project root
cd /home/mikecerqua/projects/LLM-Runner-Router

# Create a test script
cat > test-model-load.mjs << 'EOF'
import fs from 'fs';
import path from 'path';
import { fileURLToPath } from 'url';

const __filename = fileURLToPath(import.meta.url);
const __dirname = path.dirname(__filename);

console.log('Loading LLM Router...');

// Load the registry
const registryPath = path.join(__dirname, 'models', 'registry.json');
if (fs.existsSync(registryPath)) {
    const registry = JSON.parse(fs.readFileSync(registryPath, 'utf8'));
    console.log('\nüìö Registered Models:');
    registry.models.forEach(model => {
        console.log(`\n  ${model.id}:`);
        console.log(`    Name: ${model.name}`);
        console.log(`    Format: ${model.format}`);
        console.log(`    Size: ${model.parameters.size}`);
        console.log(`    Path: ${model.path}`);
        
        // Check if model file exists
        const modelPath = path.join(__dirname, model.path);
        const exists = fs.existsSync(modelPath);
        console.log(`    Status: ${exists ? '‚úÖ Available' : '‚ùå Not found'}`);
    });
    
    console.log(`\nüéØ Default Model: ${registry.defaultModel}`);
} else {
    console.log('‚ùå No registry found');
}

// Try to load the main router
try {
    const { LLMRouter } = await import('./src/index.js');
    console.log('\n‚úÖ LLMRouter loaded successfully');
    
    // Test basic initialization
    const router = new LLMRouter({
        autoInit: false,
        strategy: 'balanced'
    });
    
    console.log('‚úÖ Router initialized');
    
    // Try to register models from registry
    if (fs.existsSync(registryPath)) {
        const registry = JSON.parse(fs.readFileSync(registryPath, 'utf8'));
        console.log('\nüîÑ Registering models...');
        
        for (const model of registry.models) {
            try {
                await router.registry.register(model);
                console.log(`  ‚úÖ Registered: ${model.id}`);
            } catch (err) {
                console.log(`  ‚ö†Ô∏è  Failed to register ${model.id}: ${err.message}`);
            }
        }
    }
    
} catch (err) {
    console.log(`\n‚ö†Ô∏è  Router initialization warning: ${err.message}`);
    console.log('This is expected if models are not fully configured yet.');
}

console.log('\n‚úÖ Model test complete!');
EOF

# Run the test
node test-model-load.mjs

# Clean up
rm -f test-model-load.mjs

echo "üí° Use 'npm run dev' to start the development server"