# LLM Router Staging Environment Configuration
# Testing environment that mirrors production

# Server Configuration
NODE_ENV=staging
PORT=3001
HOST=0.0.0.0

# Security - CORS Origins
ALLOWED_ORIGINS=http://localhost:3001,https://staging.your-domain.com

# API Keys (staging keys - not for production)
API_KEYS=staging-key-123456789,staging-test-key

# Rate Limiting (more permissive for testing)
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=200        # Higher limit for testing

# Model Configuration (staging optimized)
MAX_MODEL_SIZE=1500000000  # 1.5GB
MAX_CONCURRENT=5           # Moderate concurrency
ROUTING_STRATEGY=balanced

# CPU Optimization
LLM_MAX_THREADS=2

# Memory Optimization
LLM_CONTEXT_SIZE=1536

# Batch size
LLM_BATCH_SIZE=6

# Caching
CACHE_ENABLED=true
CACHE_TTL=300000  # 5 minutes

# Logging (more verbose for debugging)
LOG_LEVEL=debug

# Performance Monitoring
ENABLE_METRICS=true

# Session Security (staging secret)
SESSION_SECRET=staging-session-secret-replace-in-production

# Testing Features
ENABLE_TEST_ENDPOINTS=true
ALLOW_CORS_ALL=true

# Optional: Error Tracking
# SENTRY_DSN=your-staging-sentry-dsn

# Optional: Database
# DATABASE_URL=postgresql://user:password@localhost:5432/llm_router_staging

# Optional: Redis
# REDIS_URL=redis://localhost:6379/1